
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tl_client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tl.view.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tl.view.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.tl.view.RecentActivity"
            android:label="@string/title_activity_recent" >
        </activity>
        <activity
            android:name="com.tl.view.BuddyActivity"
            android:label="@string/title_activity_buddy" >
        </activity>
        <activity
            android:name="com.tl.view.GroupActivity"
            android:label="@string/title_activity_group_acitivity" >
        </activity>
        <activity
            android:name="com.tl.view.TrendsActivity"
            android:label="@string/title_activity_trends_acitivy" >
        </activity>
        <activity
            android:name="com.tl.view.MoreActivity"
            android:label="@string/title_activity_more" >
        </activity>

        <service android:name="com.example.tl_client.GetMessagesService" >
            <intent-filter>

                <!-- 为该Service组件的intent-filter配置action -->
                <action android:name="com.tl.view.GetMessagesService" />
            </intent-filter>
        </service>

        <activity
            android:name="com.tl.view.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.tl.view.ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
        <activity
            android:name="com.example.tl_client.DBTestActivity"
            android:label="@string/title_activity_dbtest" >
        </activity>
        
        <activity
            android:name="com.example.tl_client.StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
        
    </application>
</manifest>
